#include <iostream>
using namespace std;
int main() {
	int NumberOne = 20, NumberTwo = 30, NumberThree = 10;
	cout << NumberOne << " + " << endl;
	cout << NumberTwo << " + " << endl;
	cout << NumberThree << endl;
	cout << "----------------" << endl;
	cout << NumberOne + NumberTwo + NumberThree << endl;
	return 0;
}
